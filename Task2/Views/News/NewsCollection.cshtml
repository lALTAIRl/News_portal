@*@model IEnumerable<News_portal.Models.News>*@
@model News_portal.ViewModels.PageIndexViewModel
@addTagHelper "*, News_portal"

<h1 align="center"><b>News Collection</b></h1>

<style>
    body {
        background-color: #edeef0;
    }

    .news_container {
        background-color: white;
        padding-left: 2%;
        padding-right: 5%;
        padding-top: 2%;
        padding-bottom: 2%;
        margin-top: 24px;
        margin-bottom: 0px;
        color: rgba(0, 0, 0, 0.86);
        font-family: &quot;
        font-size: 19px;
        font-style: normal;
        font-variant-ligatures: normal;
        font-variant-caps: normal;
        font-weight: 400;
        letter-spacing: normal;
        orphans: 2;
        text-align: start;
        text-indent: 0px;
        text-transform: none;
        white-space: normal;
        widows: 2;
        word-spacing: 0px;
        -webkit-text-stroke-width: 0px;
        text-decoration-style: initial;
        text-decoration-color: initial;
    }

    .control-label {
        align-self: center;
    }

    .form-control {
        margin-top: 3%;
    }

    img {
        width: 80%;
        margin-bottom: 3%;
    }

    p {
        margin-bottom: 3%;
    }

    .newstext {
        margin-left: 3%;
        margin-right: 3%;
    }

    .control-label {
        padding-left: 2%;
        padding-right: 2%;
    }

    .favourites {
        margin-left: 3%;
    }

    .btn-1 {
        background-color: white;
        height: 7%;
        width: 7%;
    }
</style>

<page-link page-model="Model.PageViewModel" page-action="NewsCollection"></page-link>

@foreach (var news in Model.EnumNews)
{
    @if (news.IsPublished == true)
    {
        <div class="news_container">
            <div class="control-label" align="center">
                <a asp-action="ViewNews" asp-route-id="@news.Id"><h1><b>@news.Caption</b></h1></a>
            </div>

            <div class="image" align="center">
                <img src="@news.ImageURL">
            </div>

            <div class="newstext">
                <p>
                    <div class="description">
                        @news.Description
                    </div>
                    <a asp-action="ViewNews" asp-route-id="@news.Id">Show more</a>
                </p>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="favourites">
                    <form asp-action="AddToFavourites" asp-route-id="@news.Id" method="post">
                        <button type="submit" class="btn btn-1">
                            <img src="http://s1.iconbird.com/ico/1012/human02/w128h1281349046050bookmarknew.png">
                        </button>
                    </form>
                </div>
            }
        </div>
    }
}

<page-link page-model="Model.PageViewModel" page-action="NewsCollection"></page-link>


<script>
    function title() {
        var elem = document.getElementsByClassName('description');
        var text = elem.innerHTML;
        var size = 150;
        for (var i = 0; i < 10; i++) {
            if (elem[i].innerHTML.length > size) {
                text = elem[i].innerHTML.substr(0, size);
            }
            else {
                text = elem[i].innerHTML.substr(0, elem[i].innerHTML.length);
            }
            elem[i].innerHTML = text + "...";
        }
    }
    title();
</script>