@model Task2.Models.News
@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    input[type="radio"] {
        display: none;
    }

    .form-group {
        margin-top: 2%;
    }
</style>

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.css">

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Heading</label>
        <div class="col-sm-10">
            <input class="form-control" id="caption" name="caption" value="@Model.Caption">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input class="form-control" id="description" name="description" value="@Model.Description">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Text</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="8" id="editor" name="text">@Model.Text</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">ImageURL</label>
        <div class="col-sm-10">
            <input class="form-control" id="imageurl" name="imageurl" value="@Model.ImageURL" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="hidden" class="form-control" id="dateofcreating" name="dateofcreating" value="@Model.DateOfCreating" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="hidden" class="form-control" id="ispublished" name="ispublished" value="@Model.IsPublished" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="hidden" class="form-control" id="dateofpublishing" name="dateofpublishing" value="@Model.DateOfPublishing" />
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-2">
            <button type="submit" class="btn btn-primary" asp-action="ApplyNewsEditing" asp-route-id="@Model.Id">Save</button>
        </div>
    </div>
</form>

<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.js"></script>
<script>
    var editor = new Jodit('#editor');
</script>