@{
    ViewData["Title"] = "CreateNews";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<head>

    <style>

        .form-group {
            margin-top: 2%;
        }

    </style>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.css">

</head>

<form method="post" class="form-horizontal">
    <div>

    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Heading</label>
        <div class="col-sm-10">
            <input class="form-control" id="caption" name="caption" placeholder="Heading">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input class="form-control" id="description" name="description" placeholder="Description">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Text</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="12" id="editor" name="text" placeholder="Text"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">ImageURL</label>
        <div class="col-sm-10">
            <input class="form-control" id="imageurl" name="imageurl" placeholder="ImageURL">
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>

<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.js"></script>
<script>var editor = new Jodit('#editor');</script>